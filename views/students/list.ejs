<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
</head>

<body>

    <h1>Students Table</h1>

    <p>
        <a href="/students/add">Add a student</a>
    </p>

    <table border="1" cellpadding="10">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Class</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(function(student) { %>
                <tr>
                    <td>
                        <%= student.id %>
                    </td>
                    <td>
                        <%= student.first_name %>
                    </td>
                    <td>
                        <%= student.last_name %>
                    </td>
                    <td>
                        <%= student.class %>
                    </td>
                    <td>
                        <button>
                            <a href="/students/edit/<%= student.id %>">Edit</a>
                        </button>

                        <button>
                            <a href="/students/delete/<%= student.id %>">Delete</a>
                        </button>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>